<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_normal_form_view_extra_km" model="ir.ui.view">
        <field name="name">inherit.product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="extra_km"/>
                    <label for="extra_km"/>
                </span>
                <span class="d-inline-block">
                    <field name="tire"/>
                    <label for="tire"/>
                </span>
            </div>
        </field>
    </record>
    <record id="inherit_product_template_form_view_extra_km" model="ir.ui.view">
        <field name="name">inherit.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="extra_km"/>
                    <label for="extra_km"/>
                </span>
                 <span class="d-inline-block">
                    <field name="tire"/>
                    <label for="tire"/>
                </span>
            </div>
        </field>
    </record>
</odoo>